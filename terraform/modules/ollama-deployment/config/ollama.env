# Ollama Environment Configuration

# Logging
OLLAMA_LOG_LEVEL=${log_level}

# Performance settings
OLLAMA_MAX_LOADED_MODELS=${max_loaded_models}
OLLAMA_NUM_PARALLEL=${num_parallel}
OLLAMA_MAX_QUEUE=${max_queue}
OLLAMA_KEEP_ALIVE=${keep_alive}

# GPU settings (if GPU is enabled)
%{ if gpu_memory_fraction != "" ~}
OLLAMA_GPU_MEMORY_FRACTION=${gpu_memory_fraction}
%{ endif ~}

# Server settings
OLLAMA_HOST=0.0.0.0:11434
OLLAMA_ORIGINS=*

# Model settings
OLLAMA_MODELS=/models

# Performance tuning
OLLAMA_FLASH_ATTENTION=1
OLLAMA_NOPRUNE=0

# Security settings
OLLAMA_DEBUG=0